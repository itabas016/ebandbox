@using FrameMobile.Model.Mobile;
@model MobileProperty
@{
    bool isUpdateMode = ViewData["IsUpdate"] != null;
    ViewBag.Title = isUpdateMode ? "修改手机属性关联" : "添加手机属性关联";
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";

    var brandlist = ViewData["Brandlist"] as SelectList;
    var hardwarelist = ViewData["Hardwarelist"] as SelectList;
    var resolutionlist = ViewData["Resolutionlist"] as SelectList;
}

<div class="contentHeader">
    <div class="contentHeaderInfo">
        <button class="btn btn-quaternary btn-large addapp" onclick="history.back();">
            返 回</button>
    </div>
    <div class="apphead">
        <div class="title">
            <b>@ViewBag.Title </b>
        </div>
    </div>
</div>
<div class="content">
    <div class="windows">
        @using (Html.BeginForm())
        {

            <p>
                <div class="title">
                    <h1>
                        @ViewBag.Title</h1>
                </div>
            </p>

            <div style="clear: both">
                <table>
                    <tr>
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(m => m.Id)
                        <td><strong>名称: </strong></td>
                        <td>@Html.TextBoxFor(m => m.Name)</td>
                    </tr>
                    <tr>
                        <td><strong>品牌: </strong></td>
                        <td>
                            @Html.DropDownListFor(m => m.BrandId, (SelectList)brandlist, "请选择")
                        </td>
                    </tr>
                    <tr>
                        <td><strong>项目: </strong></td>
                        <td>
                            @Html.DropDownListFor(m => m.HardwareId, (SelectList)hardwarelist, "请选择")
                        </td>
                    </tr>
                    <tr>
                        <td><strong>分辨率: </strong></td>
                        <td>
                            @Html.DropDownListFor(m => m.ResoulutionId, (SelectList)resolutionlist, "请选择")
                        </td>
                    </tr>
                    <tr>
                        <td><strong>备注: </strong></td>
                        <td>@Html.TextAreaFor(m => m.Comment)</td>
                    </tr>
                    <tr>
                        <td><strong>状态: </strong></td>
                        <td>@Html.RadioButtonFor(m => m.Status, 1) 有效 @Html.RadioButtonFor(m => m.Status, 0) 无效</td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <button class="btn btn-large btn-blue addapp" style="margin-left: 50px">@ViewBag.Title</button>
                        </td>
                    </tr>
                </table>
            </div>
        }
    </div>
</div>

