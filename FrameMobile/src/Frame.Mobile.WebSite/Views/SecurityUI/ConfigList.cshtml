@using FrameMobile.Model.Security;
@model List<SecurityConfig>
@{
    ViewBag.Title = "配置表";
    Layout = "~/Views/Shared/_SecurityLayout.cshtml";

    List<SecurityConfig> configlist = ViewData["Configlist"] as List<SecurityConfig>;
    configlist = configlist != null ? configlist : new List<SecurityConfig>();

    var totalCount = ViewData["TotalCount"] as int?;
    totalCount = totalCount != null ? totalCount : 0;
}

<div class="contentHeader">
    <div class="contentHeaderInfo">
        <button class="btn btn-large btn-blue addapp" onclick="window.open('ConfigAdd','_self');">
            配置表添加</button>
    </div>
    <div class="apphead">
        <div class="title">
            <b>@ViewBag.Title (总数:@totalCount)</b>
        </div>
        <div>
            <button class="btn btn-quaternary btn-large" onclick="history.back();">
                返 回</button>
        </div>
    </div>
</div>
<div class="content">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>序号</th>
                <th>配置表名称</th>
                <th>配置表类型</th>
                <th>最新版本</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody class="prolist">
            @foreach (var item in configlist)
            {
                <tr class="odd gradeX">
                    <td><strong>@item.Id</strong></td>
                    <td>@item.Name</td>
                    <td>@item.Type</td>
                    <td>@item.LatestVersion</td>
                    <td class="center">
                        <button type="button" class="btn btn-large btn-gray"  onclick="window.open('ConfigEdit?configId=@item.Id','_self');">修 改</button>
                    </td>
                    <td class="center">
                        <button type="button" class="btn btn-large btn-gray"  onclick="var c=confirm('确定要删除?'); if(c==true){window.open('ConfigDelete?configId=@item.Id','_self');}">
                            删 除</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

