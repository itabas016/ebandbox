@using FrameMobile.Domain.Service
@using StructureMap;
@{
    Layout = null;
    ICookieService cookService = ObjectFactory.GetInstance<ICookieService>();
    var userName = cookService.TryGet("UserName");
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.title</title>

    <link href="@Url.Content("~/Content/news/css/main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Calendar/WdatePicker.js")" type="text/javascript"></script>
</head>
<body>
    <div class="top">
        <div style="float: right; line-height: 25px;">
            <span style="float: left; display: block; padding: 15px 15px 0 0"><u>@userName</u>
            </span><a href="/Account/LogOff" class="logout" title="退出登录"></a>
        </div>
    </div>
    <div class="main">
        <div class="left">
            <ul id="navOp">
                <li><span class="ico icon-layers"></span>@Html.ActionLink("手机属性关联列表", "PropertyList", "Mobile", null, new { highlight = "true" })</li>
                <li><span class="ico icon-compass"></span>@Html.ActionLink("品牌配置", "BrandList", "Mobile", null, new { highlight = "true", style = "color:white" })</li>
                <li><span class="ico icon-compass"></span>@Html.ActionLink("分辨率配置", "ResolutionList", "Mobile", null, new { highlight = "true", style = "color:white" })</li>
                <li><span class="ico icon-compass"></span>@Html.ActionLink("项目配置", "HardwareList", "Mobile", null, new { highlight = "true", style = "color:white" })</li>
                <li><span class="ico icon-compass"></span>@Html.ActionLink("壁纸管理", "WallPaperManage", "WallPaperUI", null, new { highlight = "true", style = "color:white" })</li>
                </ul>
        </div>
        <div class="right">
            <div id="errorInfo" class="error">
                @if (TempData["errorMsg"] != null)
                {
                    @Html.Raw(TempData["errorMsg"].ToString())
                }
            </div>
            @RenderBody()
        </div>
    </div>
</body>
</html>
