@using FrameMobile.Domain.Service
@using StructureMap;
@{
    Layout = null;
    ICookieService cookService = ObjectFactory.GetInstance<ICookieService>();
    var userName = cookService.TryGet("UserName");
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.title</title>

    <link href="@Url.Content("~/Content/news/css/main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Calendar/WdatePicker.js")" type="text/javascript"></script>
</head>
<body>
    <div class="top">
        <img src="../../Content/common/images/news_logo.png" alt="新闻管理" style="float: left;">
        <div style="float: right; line-height: 25px;">
            <span style="float: left; display: block; padding: 15px 15px 0 0">
                <a href="/Account/Manage?userName=@userName" style="color:white"><u>@userName</u></a>
            </span>
            <a href="/Account/LogOff" class="logout" title="退出登录"></a>
        </div>
    </div>
    <div class="main">
        <div class="left">
            <ul id="navOp">
                <li><span class="ico icon-layers"></span>@Html.ActionLink("新闻列表", "NewsManage", "NewsUI", null, new { highlight = "true" })</li>
                <li><span class="ico icon-compass"></span>@Html.ActionLink("提供商配置", "SourceList", "NewsUI", null, new { highlight = "true", style = "color:white" })</li>
                <li><span class="ico icon-compass"></span>@Html.ActionLink("配置表版本", "ConfigList", "NewsUI", null, new { highlight = "true", style = "color:white" })</li>
                <li><span class="ico icon-compass"></span>@Html.ActionLink("外推应用", "ExtraAppList", "NewsUI", null, new { highlight = "true", style = "color:white" })</li>
                <li><span class="ico icon-compass"></span>@Html.ActionLink("分类管理", "CategoryList", "NewsUI", null, new { highlight = "true", style = "color:white" })</li>
                <li><span class="ico icon-compass"></span>@Html.ActionLink("子分类管理", "SubCategoryList", "NewsUI", null, new { highlight = "true", style = "color:white" })</li>
                <li><span class="ico icon-compass"></span>@Html.ActionLink("接口地址管理", "InfAddressList", "NewsUI", null, new { highlight = "true", style = "color:white" })</li>
                <li><span class="ico icon-compass"></span>@Html.ActionLink("雷达分类管理", "RadarCategoryList", "Radar", null, new { highlight = "true", style = "color:white" })</li>
                <li><span class="ico icon-compass"></span>@Html.ActionLink("雷达元素管理", "RadarElementList", "Radar", null, new { highlight = "true", style = "color:white" })</li>
                <li><span class="ico icon-compass"></span>@Html.ActionLink("渠道广告位配置", "ExtraRatioList", "NewsUI", null, new { highlight = "true", style = "color:white" })</li>

            </ul>
        </div>
        <div class="right">
            <div id="errorInfo" class="error">
                @if (TempData["errorMsg"] != null)
                {
                    @Html.Raw(TempData["errorMsg"].ToString())
                }
            </div>
            @RenderBody()
        </div>
    </div>
</body>
</html>
