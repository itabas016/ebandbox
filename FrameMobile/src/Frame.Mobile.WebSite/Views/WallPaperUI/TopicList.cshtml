@using FrameMobile.Model.Theme;
@model List<WallPaperTopic>
@{
    ViewBag.Title = "专题管理";
    Layout = "~/Views/Shared/_WallPaperLayout.cshtml";

    List<WallPaperTopic> topiclist = ViewData["Topiclist"] as List<WallPaperTopic>;
    topiclist = topiclist != null ? topiclist : new List<WallPaperTopic>();
    var totalCount = ViewData["TotalCount"] as int?;
    totalCount = totalCount != null ? totalCount : 0;
}

<div class="contentHeader">
    <div class="contentHeaderInfo">
        <button class="btn btn-large btn-blue addapp" onclick="window.open('TopicAdd','_self');">
            专题添加</button>
    </div>
    <div class="apphead">
        <div class="title">
            <b>@ViewBag.Title (总数:@totalCount)</b>
        </div>
        <div>
            <button class="btn btn-quaternary btn-large" onclick="history.back();">
                返 回</button>
        </div>
    </div>
</div>
<div class="content">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>序号</th>
                <th>名称</th>
                <th>图片地址</th>
                <th>排序号</th>
                <th>备注</th>
                <th>状态</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody class="prolist">
            @foreach (var item in topiclist)
            {
                <tr class="odd gradeX">
                    <td><strong>@item.Id</strong></td>
                    <td><strong>@item.Name</strong></td>
                    <td>@item.CategoryLogoUrl</td>
                    <td>@item.OrderNumber</td>
                    <td>@item.Comment</td>
                    <td>@item.Status</td>
                    <td class="center">
                        <button type="button" class="btn btn-large btn-gray"  onclick="window.open('TopicEdit?topicId=@item.Id','_self');">修 改</button>
                    </td>
                    <td class="center">
                        <button type="button" class="btn btn-large btn-gray"  onclick="var c=confirm('确定要删除?'); if(c==true){window.open('TopicDelete?topicId=@item.Id','_self');}">
                            删 除</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
